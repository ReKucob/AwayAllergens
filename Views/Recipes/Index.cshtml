@model IEnumerable<Search_Recipes.Models.Recipe>

@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="content-type" content="Food Recipes; charset=utf-8" />
    <meta name="author" content="Obtanica" />
    <meta name="description" content="Recipes finder">
    <!-- Document title -->
    <title>Find Recipes | Allergens Away</title>
    <!-- Stylesheets & Fonts -->
    <link href="~/searchPageTemplate/css/plugins.css" rel="stylesheet">
    <link href="~/searchPageTemplate/css/style.css" rel="stylesheet">
    <link href="~/searchPageTemplate/css/responsive.css" rel="stylesheet">
    <link href='~/searchPageTemplate/js/plugins/components/datatables/datatables.min.css' rel='stylesheet' />
</head>

<body class="container-fluid">
    <!-- Body Inner -->
    <div class="body-inner">


        <style>
            .searchbar {
                padding-left: 60px;
                width: 100%;
                height: 40px;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
                border-color: darkorange;
                background-image: url('../../Pictures/search-second-page.png');
                background-size: 30px 30px;
                background-position: left;
                background-position-x: 20px;
                background-repeat: no-repeat;
            }

            .excludedbar {
                padding-left: 60px;
                width: 100%;
                height: 40px;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
                border-color: darkorange;
                background-image: url('../../Pictures/dustbin.png');
                background-size: 30px 30px;
                background-position: left;
                background-position-x: 20px;
                background-repeat: no-repeat;
            }

            .searchbutton {
                background-color: darkorange;
                font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
                padding: 15px 32px;
                text-align: center;
                width: 285px;
                height: 40px;
                border: none;
            }

                .searchbutton:hover {
                    background-color: orange;
                }

            .dropdown {
                background-color: transparent;
                font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
                font-size: 20px;
                border-top: none;
                border-right: none;
                border-left: none;
                border-color: white;
                color: black;
                line-height:inherit;
                }
        </style>

        <!-- Header -->
        <header id="header" style="margin-top:30px" data-transparent="true" data-fullwidth="true" class="dark">
            <div class="header-inner">
                <div class="container-fluid">
                    <!--Logo-->
                    <div id="logo">
                        <a href="https://obtanicallergensaway.tk" class="logo">
                            <img src="~/Pictures/App-icon-horizon.png" style="margin-left:50px" />
                        </a>
                    </div>
                    <!--End: Logo-->
                    <!--Navigation Resposnive Trigger-->
                    <div id="mainMenu-trigger">
                        <button class="lines-button x"> <span class="lines"></span> </button>
                    </div>
                    <!--end: Navigation Resposnive Trigger-->
                    <!--Navigation-->
                    <div id="mainMenu">
                        <div class="container-fluid">
                            <nav>
                                <ul>
                                    <li><a href="https://obtanicallergensaway.tk" style="font-size:16px;font-family:'Mongolian',sans-serif;padding:12px 25px;color:black">Home</a></li>
                                    <li><a href="https://obtanicallergensaway.tk/education-of-allergy/" style="font-size:16px;font-family:'Mongolian',sans-serif;padding:12px 25px;color:black">For Kids</a></li>
                                    <li><a href="https://searchobtanicallergnsaway.azurewebsites.net"style="font-size:16px;font-family:'Mongolian',sans-serif;padding:12px 25px;color:black">Find Recipes</a></li>
                                    <li><a href="https://obtanicallergensaway.tk/allergy-centres/" style="font-size:16px;font-family:'Mongolian',sans-serif;padding:12px 25px;color:black">Allergy Center</a></li>
                                    <li><a href="https://obtanicallergensaway.tk/contact/" style="font-size:16px;font-family:'Mongolian',sans-serif;padding:12px 25px;color:black">About Us</a></li>

                                </ul>
                            </nav>
                        </div>
                    </div>
                    <!--END: NAVIGATION-->
                </div>
            </div>
        </header>
        <!-- end: Header -->
        <!-- Page title -->
        <section id="page-title" style="background-image: url('../../Pictures/DessertBg.jpg');background-size:cover">
            <div class="container-fluid animated fadeInDown visible" data-animate="fadeInDown" data-animate-delay="1200">
                <div class="page-title" style="margin-top:50px">
                    <h1> Explore 8,000+ Allergy-free Recipes</h1>
                
                @using (Html.BeginForm("Index", "Recipes", FormMethod.Get))
                {
                    <div class="row" style="margin-top:70px; color:white">
                        <div class="col-lg-2 col-md-2">
                        </div>
                        <div class="col-lg-3 col-md-3 col-xs-12">
                            @Html.TextBox("SearchString", null, new { @class = "searchbar", placeholder = "Ingredients Including..." })
                        </div>
                        <div class="col-lg-3 col-md-3 col-md-offset-2 col-sm-12 col-xs-12">
                            @Html.TextBox("exFood", null, new { @class = "excludedbar", placeholder = "Ingredients Remove..." })
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            <input class="searchbutton" type="submit" value="Search" />
                        </div>
                    </div>
                    <div class="row" style="text-align:center;margin-top:10px">
                        <div class="col-lg-2 col-md-2">
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            @Html.DropDownList("mealContent", new List<SelectListItem>{
                                              new SelectListItem{Text="Appetizer", Value="apperizer"},
                                              new SelectListItem{Text="Breakfast", Value="breakfast"},
                                              new SelectListItem{Text="Lunch", Value="lunch"},
                                              new SelectListItem{Text="Dinner", Value="dinner"},
                                              new SelectListItem{Text="Cocktail", Value="cocktail"},
                                              new SelectListItem{Text="Brunch", Value="brunch"},
                                              new SelectListItem{Text="Snack", Value="snack"},
                                              new SelectListItem{Text="Dessert", Value="dessert"},
                           }
                                             , " - Meal Type - ", new { @class = "dropdown" }
                           )
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            @Html.DropDownList("meatContent", new List<SelectListItem>{
                                              new SelectListItem{Text="Chicken", Value="chicken"},
                                              new SelectListItem{Text="Beef", Value="beef"},
                                              new SelectListItem{Text="Lamb", Value="lamb"},
                                              new SelectListItem{Text="Pork", Value="pork"},
                                              new SelectListItem{Text="Fish", Value="fish"},
                                              new SelectListItem{Text="Vegetarain", Value="vegetarain"},
                           }
                                             , " - Meat Type - ", new { @class = "dropdown" }
                           )
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            @Html.DropDownList("allergensFree", new List<SelectListItem>{
                                              new SelectListItem{Text="Wheat/gluten-free", Value="wheat/gluten-free"},
                                              new SelectListItem{Text="Dairy-free", Value="dairy free"},
                                              new SelectListItem{Text="Peanut-free", Value="peanut free"},
                                              new SelectListItem{Text="Soy-free", Value="soy free"},
                                              new SelectListItem{Text="Tree-nut-free", Value="tree nut free"},

                       }
                                             , " - Remove Allergens - ", new { @class = "dropdown" }
                           )
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            @Html.DropDownList("cookStyle", new List<SelectListItem>{
                                              new SelectListItem{Text="Fry", Value="fry"},
                                              new SelectListItem{Text="Grill", Value="grill"},
                                              new SelectListItem{Text="Barbecue", Value="barbecue"},
                                              new SelectListItem{Text="Bake", Value="bake"},
                                              new SelectListItem{Text="Steam", Value="steam"},
                                              new SelectListItem{Text="Roast", Value="roast"},
                           }
                                             , " - Cooking Style - ", new { @class = "dropdown" }
                           )
                        </div>


                    </div>
                }
            </div>
            </div>
        </section>
        <!-- end: Page title -->
        <!-- Content -->

        <section id="page-content">            
              
              
            <br />
            <br />
            <div class="row">
                <div class="col-lg-1">
                </div>
                <!-- Sidebar-->
                <!-- end: Sidebar-->
                <!-- post content -->

                <div class="col-lg-8">
                    <table id="datatable" class="table table-bordered table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rating)
                                </th>
                            </tr>
                        </thead>
                        <tbody style="font-family:Arial; font-size:larger; font-weight:600">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.Title, "Details", new { id = item.Id })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rating)
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rating)
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- end: post content -->
                <div class="sidebar col-lg-2 col-md-2 col-lg-offset-1 col-xs-12 col-sm-12">

                    <!--Tabs with Posts-->
                    <div class="widget ">
                        <h3 class="widget-title">Recommended Meal Plans</h3>
                        <div class="post-thumbnail-list">
                            <div class="post-thumbnail-entry">
                                <a href="~/Fitness">
                                    <img src="~/Pictures/mealplan1.png" style="width:150px;height:150px" />
                                    <br />
                                    <h5 class="post-thumbnail-content" style="text-align:center">
                                        Fitness Collections
                                    </h5>
                                </a>
                            </div>

                            <div class="post-thumbnail-entry">
                                <a href="~/ChildrenMP">
                                    <img src="~/Pictures/mealplan2.png" style="width:150px;height:150px" />
                                    <br />
                                    <h5 class="post-thumbnail-content" style="text-align:center">
                                        Desserts for Kids
                                    </h5>
                                </a>
                            </div>

                            <div class="post-thumbnail-entry">
                                <a href="#">
                                    <img src="~/Pictures/mealplan3.png" style="width:150px;height:150px" />
                                    <br />
                                    <h5 class="post-thumbnail-content" style="text-align:center">Summer Specials(coming soon....)</h5>
                                </a>
                            </div>

                        </div>
                    </div>
                    <!--End: Tabs with Posts-->

                </div>

            </div>

        </section>
        <!-- end: Content -->
        <!-- Footer -->
        <footer id="footer">
            <div class="footer-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-5">

                            <img src="~/Pictures/App-icon-horizon.png" />
                        </div>

                        <div class="col-lg-7">
                            <p>
                                Allergens Away by A26 Obtanica is built around helping those suffering from food allergies.
                                We’re your companion in preparing food for yourselves and those you care about.
                                Resources for parents who want to teach their kids about food allergies are available here too.
                            </p>
                            <br />
                            <p>
                                Made with ❤️ in Melbourne, Australia.
                            </p>
                        </div>


                    </div>
                </div>
            </div>
        </footer>
        <!-- end: Footer -->

    </div>
    <!-- end: Body Inner -->
    


    <script src="~/searchPageTemplate/js/jquery.js"></script>
    <script src="~/searchPageTemplate/js/functions.js"></script>

    <!--Template functions-->

    <script src='~/searchPageTemplate/js/plugins/components/datatables/datatables.min.js'></script>
    <script>

        $(document).ready(function () {
            var table = $('#datatable').DataTable({
                searching: false
            });

        });



    </script>



</body>